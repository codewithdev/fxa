{
  "name": "firefox-fortress",
  "description": "A simple tasklist app that demonstrates FxA Sign-In",
  "version": "0.0.2",
  "author": {
    "name": "Mozilla",
    "url": "https://mozilla.org/"
  },
  "licenses": [
    {
      "type": "MPL 2.0",
      "url": "https://mozilla.org/MPL/2.0/"
    }
  ],
  "homepage": "http://fortress.firefox.org/",
  "bugs": "https://github.com/mozilla/fxa/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla/fxa.git"
  },
  "private": true,
  "dependencies": {
    "client-sessions": "0.6.x",
    "express": "4.16.4",
    "jquery": "^3.5.0",
    "morgan": "1.9.1",
    "pug": "2.0.4"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6.4.1"
  },
  "devDependencies": {
    "audit-filter": "0.5.0",
    "browser-sync": "^2.26.7",
    "eslint": "6.6.0",
    "eslint-plugin-fxa": "2.0.1",
    "nodemon": "^2.0.3",
    "npm-run-all": "4.1.5",
    "pm2": "^4.2.3",
    "prettier": "1.18.2"
  },
  "scripts": {
    "lint": "npm-run-all --parallel lint:*",
    "audit": "npm audit --json | audit-filter --nsp-config=.nsprc --audit=-",
    "lint:eslint": "eslint .",
    "start": "pm2 start pm2.config.js",
    "stop": "pm2 stop pm2.config.js",
    "restart": "pm2 restart pm2.config.js",
    "test": "npm run lint",
    "format": "prettier '**' --write",
    "dev": "nodemon server.js",
    "ui": "browser-sync start --proxy='localhost:9292' --files='**/*.css, **/*.pug, **/*.js' --ignore=node_modules --port=6006 --no-open --serveStatic='static'"
  }
}
