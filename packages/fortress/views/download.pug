extends layout

block content
  h1 #{data.global.title} <span class="highlight">#{data.products[index].title}</span>
  h2 #{data.global.congrats}
  .cards
    .card.download
      h3 Download #{data.products[index].title}
      a(href='/').button Download
      if data.products[index].upgradeTo
        - var i = data.products[index].upgradeTo
          a.link(href=`${data.global.paymentsUrl}/${data.products[i].productId}`) Upgrade to <span class="highlight">#{data.products[i].title}</span>